<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vamaraju.vamaraju_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReflexesActivity"
            android:label="@string/title_activity_reflexes"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".StatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".BuzzerStartActivity"
            android:label="@string/title_activity_buzzer_start"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Buzzer2PlayerActivity"
            android:label="@string/title_activity_buzzer2_player"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Buzzer3PlayerActivity"
            android:label="@string/title_activity_buzzer3_player"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Buzzer4PlayerActivity"
            android:label="@string/title_activity_buzzer4_player"
            android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>
